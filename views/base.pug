doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.2/axios.min.js' defer)
            script(src='https://js.stripe.com/v3/')
            //- script(src='js/logout.js' defer)
            //- script(type='module' src='js/alerts.js' defer)
            script(src='/js/bundle.js' defer)
            //- Being served css & images from public folder using express.static in app.js 
            //- Add a slash before css and img in href for css to work in other routes/pages
            link(rel='stylesheet' href='/css/style.css') 
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            title Natours | #{title}


    body
        // HEADER
        include _header

        // CONTENT
        block content
            h1 This is a placeholder heading

        // FOOTER
        include _footer